#!/bin/sh
# postinst script for abusehelper
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure|reconfigure)
        if ! dpkg-statoverride --list /etc/abusehelper >/dev/null; then
            dpkg-statoverride --add abusehel abusehel 750 /etc/abusehelper
            chmod 750 /etc/abusehelper
        fi
        if ! dpkg-statoverride --list /var/log/abusehelper >/dev/null; then
            dpkg-statoverride --add abusehel abusehel 750 /var/log/abusehelper
            chmod 750 /var/log/abusehelper
        fi
        if ! dpkg-statoverride --list /var/lib/abusehelper >/dev/null; then
            dpkg-statoverride --add abusehel abusehel 750 /var/lib/abusehelper
            chmod 750 /var/lib/abusehelper
            chown abusehel:abusehel /var/lib/abusehelper
        fi
        chown -R abusehel:abusehel /etc/abusehelper /var/log/abusehelper
        chmod -R o-rwx /etc/abusehelper /var/log/abusehelper
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


