#!/bin/sh
# postrm script for abusehelper
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postrm> `remove'
#        * <postrm> `purge'
#        * <old-postrm> `upgrade' <new-version>
#        * <new-postrm> `failed-upgrade' <old-version>
#        * <new-postrm> `abort-install'
#        * <new-postrm> `abort-install' <old-version>
#        * <new-postrm> `abort-upgrade' <old-version>
#        * <disappearer's-postrm> `disappear' <overwriter>
#          <overwriter-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    purge) 
        if which deluser >/dev/null ; then
            deluser abusehel 2>/dev/null || true
        fi
        if dpkg-statoverride --list /etc/abusehelper >/dev/null; then
            dpkg-statoverride --remove /etc/abusehelper
        fi
        if dpkg-statoverride --list /var/log/abusehelper >/dev/null; then
            dpkg-statoverride --remove /var/log/abusehelper
        fi
        if dpkg-statoverride --list /var/lib/abusehelper >/dev/null; then
            dpkg-statoverride --remove /var/lib/abusehelper
        fi
        rm -f /etc/default/abusehelper
        rm -rf /etc/abusehelper /var/log/abusehelper
    ;;

    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
    ;;

    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0


